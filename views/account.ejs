<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <link href="/src/css/layout.css" rel="stylesheet">
    <link href="/src/css/account.css" rel="stylesheet">
    <script src="/src/js/dist/account.js" defer></script>
</head>

<body>
<% let links = [{ name: 'Tasks', href: '/tasks', class: '' }, { name: 'Account', href: '/account', class: 'active-nav-link' }, { name: 'Logout', href: '/logout', class: 'logout-link' }] %>
<%- include('partials/navigation', {links: links}) %>

<main role="main">
    <section class="account-container">
        <div class="sidebar-top"></div>
        <div class="sidebar">
            <img src="/images/profile.png" alt="Profile picture">

            <div class="links-box">
                <a href="/account" class="account-link">Profile</a>
                <a href="/account/security" class="account-link">Security</a>
            </div>
        </div>

        <div class="section-title-bg"></div>
        <div class="section-title">
            <h2>Edit Profile</h2>
        </div>

        <div class="form-bg"></div>
        <form class="account-profile-form" action="javascript:" novalidate autocomplete="off">
            <div class="success-banner">Your profile has been updated</div>

            <div id="firstName-box" class="input-box">
                <label for="firstName"></label>
                <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
            </div>

            <div id="lastName-box" class="input-box">
                <label for="lastName"></label>
                <input type="text" id="lastName" name="lastName" placeholder="Last Name">
            </div>


            <div id="userName-box" class="input-box">
                <label for="userName"></label>
                <input type="text" id="userName" name="userName" placeholder="Username" required>
            </div>

            <div id="email-box" class="input-box">
                <label for="email"></label>
                <input type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <button type="submit" id="submit-btn">Update Profile</button>
        </form>
    </section>
</main>

<%- include('partials/footer') %>
</body>
</html>
