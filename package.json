{
  "name": "checklist",
  "version": "1.0.0",
  "description": "A simple checklist application",
  "main": "index.js",
  "scripts": {
    "prestart": "clear && NODE_ENV=development parcel build ./client/src/js/tasks.js --no-minify --out-dir ./client/src/js/dist/ --cache-dir ./client/src/js/cache/",
    "start": "node index.js",
    "build-watch": "clear && parcel watch ./client/src/js/tasks.js ./client/src/js/login.js --out-dir ./client/src/js/dist/ --cache-dir ./client/src/js/cache/",
    "dev:start": "clear && nodemon index.js",
    "lint": "eslint ."
  },
  "keywords": [
    "checklist",
    "to-do"
  ],
  "author": "Elikem Hermon",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "chalk": "^2.4.2",
    "connect-redis": "^3.4.2",
    "core-js": "^3.1.4",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "helmet": "^3.18.0",
    "knex": "^0.18.3",
    "mysql2": "^1.6.5",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "regenerator-runtime": "^0.13.3",
    "uuid": "^3.3.2",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "eslint": "^6.0.1"
  }
}
